<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b1_background"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/tracking_location_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="268dp"
        android:text="@string/start_tracking_location" />

    <TextView
        android:id="@+id/inf_tracking_location_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tracking_location_button"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:text="@string/inf_tracking_location_text"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/inf_home_location_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="@string/inf_home_location_text"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>